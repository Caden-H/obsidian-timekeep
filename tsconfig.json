{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "react",
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"esModuleInterop": true
	},
	"include": ["**/*.ts", "src/timekeep.ts", "src/main.ts"]
}
